{
  "name": "bengali-spell-checker-vscode",
  "displayName": "Bengali Spell Checker",
  "description": "Bengali/Bangla spell checker extension for Visual Studio Code",
  "version": "1.0.0",
  "publisher": "habibium",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Language Packs"
  ],
  "keywords": [
    "bengali",
    "bangla",
    "spell-checker",
    "spellcheck"
  ],
  "activationEvents": [
    "onLanguage:markdown",
    "onLanguage:plaintext"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bengaliSpellChecker.enable",
        "title": "Enable Bengali Spell Checker"
      },
      {
        "command": "bengaliSpellChecker.disable",
        "title": "Disable Bengali Spell Checker"
      }
    ],
    "configuration": {
      "title": "Bengali Spell Checker",
      "properties": {
        "bengaliSpellChecker.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Bengali spell checking"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vsce": "^2.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@bengali-spell-checker/core": "workspace:*"
  }
}
